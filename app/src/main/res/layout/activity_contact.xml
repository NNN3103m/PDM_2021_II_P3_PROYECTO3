<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ctcImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:src="@drawable/ic_user" />

    <TextView
        android:id="@+id/ctcText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:fontFamily="sans-serif"
        android:gravity="center|start"
        android:paddingTop="3dp"
        android:text="ContÃ¡ctanos"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ctcNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center|start"
        android:paddingLeft="15dp"
        android:text="Nombre"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ctcName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="Nombre" />

    <TextView
        android:id="@+id/ctcEmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center|start"
        android:paddingLeft="15dp"
        android:text="Email"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ctcEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="Email"/>


    <TextView
        android:id="@+id/ctcMssgText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center|start"
        android:paddingLeft="15dp"
        android:text="Mensaje"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <EditText

        android:id="@+id/ctcMssg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="mensaje" />

    <Button
        android:id="@+id/ctcBtnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Enviar mensaje"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/black" />


</LinearLayout>
